<% @title="Problem Of The Week" %>
<h1 class="text-center p-1">Problem Of The Week</h1>

<div class="text-left p-4">
	<% @problems.all.each do |problem| %>
		<% if problem.is_current == 1 %>
			<h3><%= problem.title %></h3>
			<%= render plain: @markdown.render(problem.body).html_safe %>
			<% if current_user %>
				<% @default=problem.title %> 
				<%= link_to "Make Submission", "/submissions/new?prob_id=#{problem.id}", :class => "btn btn-success" %>
				<br /><br />
			<% end %>
			<% break %>
		<% end %>
	<% end%>
</div>