<% if not session[:admin] %>
<%= controller.redirect_to '/' %>
<% end %>

<h1 class="text-center p-1">Manage Problems</h1>
<% @problems.each do |problem| %>
	<h3 class="text-center">
		<%= problem.id %>. <%= link_to problem.title, problem_path(problem), :class => "text-success" %>
	</h3>
	<% if problem.is_hidden %>
		<%= render html: '<p class="text-center">Hidden</p>'.html_safe %>
	<% else %>
		<%= render html: '<p class="text-center">Not Hidden</p>'.html_safe %>
	<% end %>
	<br />
<% end %>