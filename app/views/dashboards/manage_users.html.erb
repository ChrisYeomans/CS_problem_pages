<% if not admin_status %>
	<%= controller.redirect_to '/' %>
<% else %>

	<% @title="Manage users" %>
	<h1 class="text-center p-1">Manage Users</h1>
	<table class="table table-striped table-hover">
		<thead>
			<tr class="text-center">
				<th scope="col" class="text-left">User</th>
				<th scope="col">Total Score</th>
				<th scope="col">Rank</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each_with_index do |user, i| %>
				<tr class="text-center">
					<td class="text-left">
						<%= user.id %>. <%= link_to user.name, user_path(user), :class => "text-success" %>
						<% if user.is_admin == 1 %>Admin<% end %>
					</td>
					<td>
						<%= user.score %>
					</td>
					<td>
						<%= i + 1 %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

<% end %>