<% if not admin_status %>
	<%= controller.redirect_to '/' %>
<% else %>

	<% @title="Create Submission" %>
	<h1 class="text-center">Create Submission</h1>
	<div class="container text-center">
		<% if @submission %>
	        <% @submission.errors.full_messages.each do |msg| %>
	            <div class="alert alert-danger">
	            	<%= msg %>
	            </div>
	        <% end %>
	    <% end %>
		<%= form_for :submission, url: submissions_path do |f| %>
			<%= f.label(:problem_id, "Problem ID") %><br />
			<%= f.text_field(:problem_id, size: "98x2") %>
			<br /><br />
			<%= f.label(:code, "Submission Code") %><br />
			<%= f.text_area(:code, size: "100x15") %>
			<br />
			<%= f.label(:language, "Language") %><br /><!--TODO: Make dropdown -->
			<%= f.text_field(:language, size: "98x2") %>
			<br />
			<%= f.label(:extension, "Extension") %><br />
			<%= f.text_field(:extension, size: "98x2") %>
			<br /><br />
			<%= f.submit "Submit" %>
		<% end %>
	</div>

<% end %>