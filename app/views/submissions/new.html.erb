<% if not admin_status %>
	<%= controller.redirect_to '/' %>
<% else %>

	<% @title="Create Submission" %>
	<h1 class="text-center">Create Submission</h1>
	<div class="container text-center">
		<% if @submission %>
	        <% @submission.errors.full_messages.each do |msg| %>
	            <div class="alert alert-danger">
	            	<%= msg %>
	            </div>
	        <% end %>
	    <% end %>
		<%= form_for :submission, url: submissions_path do |f| %>
			<%= f.label(:code, "Submission Code") %><br />
			<%= f.text_area(:code, size: "100x15") %>
			<br />
			<%= f.label(:problem_id, "Select Problem") %>
			<%= f.select(:problem_id, Problem.all.collect {|a| [a.title, a.id]}) %>
			<br />
			<%= f.label(:language, "Select Language") %>
			<%= f.select(:language, get_language_list) %>
			<br /><br />
			<%= f.submit "Submit" %>
		<% end %>
	</div>

<% end %>