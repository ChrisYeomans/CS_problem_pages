<% if (not current_user) || (current_user.id != @user.id) %>
	<% controller.redirect_to '/' %>
<% else %>
	
	<% @title="Change Password" %>
	<div class="text-center">
		<h1>Change Password</h1>
		<% if @user %>
	        <% @user.errors.full_messages.each do |msg| %>
	            <div class="alert alert-danger">
	            	<%= msg %>
	            </div>
	        <% end %>
	    <% end %>
		<%= form_for :user, url: user_path(current_user)+'/change_pw', method: :post do |f| %>
			<%= f.label(:password, "New Password") %>
			<%= f.password_field(:password, class: "form-control") %>
			<br /><br />
		    <%= f.label(:password_confirmation, "Repeat New Password") %><br />
		    <%= f.password_field(:password_confirmation, class: "form-control") %>
		    <br /><br />
			<%= f.submit "Change Password", class: "btn btn-primary" %>
		<% end %>
	</div>

<% end %>