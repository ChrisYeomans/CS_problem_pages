<% @title=@user.name %>
<div class="text-center">
	<% @user.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger">
        	<%= msg %>
        </div>
    <% end %>
	<h1><%= @user.name %></h1>
	<% if @user.is_admin == 1 %><strong>Admin</strong><% end %>
	<p><%= @user.email %></p>
	<% if @user.bio %><%= render plain: @markdown.render(@user.bio).html_safe %><% end %>
	<% if admin_status %>
		<%= render "manage_user_buttons" %>
	<% end %>
</div>