<div class="text-center">
    <% if flash[:notice] %>
		<div class="alert alert-danger">
			<%= flash[:notice] %>
		</div>
	<% end %>
	<h1><%= @user.name %></h1>
	<% if @user.is_admin == 1 %><strong>Admin</strong><% end %>
	<p><%= @user.email %></p>
	<p><%= @user.password_digest %></p>
	<% if admin_status %>
		<%= render "manage_user_buttons" %>
	<% end %>
</div>