<!DOCTYPE html>
<html>
  <head>
    <title>CS Problem Pages</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.css' %>
    <%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.js' %>
    <%= javascript_include_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.js' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="nav navbar-nav navbar-expand-lg navbar-dark bg-dark border-bottom border-success">
      <div class="col-sm-2">
        <a class="navbar-brand" href="/"><img src="/assets/MUCSS-Logo.png" alt="Logo" style='height: 25%; width: 25%; object-fit: contain' />MUCSS Problems</a>
      </div>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav col-sm-6">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/current_problem">Problem of The Week</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/past_problems">Past Problems</a>
          </li>
        </ul>
        <ul class="navbar-nav ml-auto p-2">
          <% if current_user %>
            <li><%= link_to "Profile", current_user, class: "nav-link" %></li>
            <li><%= link_to "Settings", '/user/'+current_user.id.to_s+'/settings', class: "nav-link" %></li>
            <li class="navbar-item"><%= link_to "Logout", "/logout", method: :post, class: "nav-link" %></li>
          <% else %>
            <li class="navbar-item"><a class="nav-link" href="/login">Login</a></li>
            <li class="navbar-item"><a class="nav-link" href="/user/new">Sign Up</a></li>
          <% end %>
          <% if admin_status %>
            <li class="navbar-item"><a class="nav-link" href="/dashboard">Dashboard</a></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="container-fluid p-5">
      <%= yield %>
    </div>
  </body>
</html>